<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="XpadControl.Dll\**" />
    <Compile Remove="XpadControl.Services\**" />
    <Compile Remove="XpadControl.WindowsServices.Interface\**" />
    <Compile Remove="XpadControl.WindowsServices\**" />
    <EmbeddedResource Remove="XpadControl.Dll\**" />
    <EmbeddedResource Remove="XpadControl.Services\**" />
    <EmbeddedResource Remove="XpadControl.WindowsServices.Interface\**" />
    <EmbeddedResource Remove="XpadControl.WindowsServices\**" />
    <None Remove="XpadControl.Dll\**" />
    <None Remove="XpadControl.Services\**" />
    <None Remove="XpadControl.WindowsServices.Interface\**" />
    <None Remove="XpadControl.WindowsServices\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="XpadControl.Services\XpadControl.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
